<!DOCTYPE html>
<html lang="en">
  <%- include('common/admin_head'); %>

  <body>
    <!-- menu -->
    <%- include('common/sidebar'); %>
    <!-- ./  menu -->
    <div class="layout-wrapper">
      <!-- header -->
      <div class="header">
        <div class="menu-toggle-btn">
          <!-- Menu close button for mobile devices -->
          <a href="#">
            <i class="bi bi-list"></i>
          </a>
        </div>
        <!-- Logo -->
        <a href="/admin/" class="logo">
          <img
            width="100"
            src="https://vetra.laborasyon.com/assets/images/logo.svg"
            alt="logo"
          />
        </a>
        <!-- ./ Logo -->
        <div class="page-title">Add Product</div>
      </div>

      <div class="content">
        <div class="mb-4">
          <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item">
                <a href="#">
                  <i class="bi bi-globe2 small me-2"></i> Dashboard
                </a>
              </li>
              <li class="breadcrumb-item active" aria-current="page">
                Add Product
              </li>
            </ol>
          </nav>
        </div>

        <% if(locals.success != '') { %>
        <div
          class="alert alert-success alert-dismissible fade show"
          role="alert"
        >
          <%= success %>
        </div>
        <% } %>

        <div class="row flex-column-reverse flex-md-row">
          <div class="col-md-8">
            <div class="tab-content" id="myTabContent">
              <div
                class="tab-pane fade show active"
                id="profile"
                role="tabpanel"
                aria-labelledby="profile-tab"
              >
                <div class="card mb-4">
                  <div class="card-body">
                    <h6 class="card-title mb-4">Add Product</h6>

                    <div class="card">
                      <div class="card-body">
                        <% if(locals.uploaderrormsg != '') { %>
                        <div
                          class="alert alert-warning alert-dismissible fade show"
                          role="alert"
                        >
                          <%= uploaderrormsg %>
                        </div>

                        <% } %>

                        <!-- Form -->
                        <form
                          method="post"
                          action="/admin/admin_add_product"
                          enctype="multipart/form-data"
                        >
                          <div class="form-group">
                            <label class="form-label">Product Name</label>
                            <input
                              class="form-control"
                              type="text"
                              name="product_name"
                              placeholder="Enter Category Name"
                              required
                            />
                          </div>
                          <div class="form-group mt-3">
                            <label class="form-label">Category</label>
                            <select
                              name="category"
                              class="form-control"
                              required
                            >
                              <option selected>--Select Category--</option>
                              <% data.forEach(function (data) { %>
                              <option value="<%= data.name %>">
                                <%= data.name %>
                              </option>
                              <% }) %>
                            </select>
                          </div>

                          <div class="form-group mt-3">
                            <label class="form-label">MRP</label>
                            <input
                              class="form-control"
                              type="text"
                              name="product_MRP"
                              required
                            />
                          </div>
                          <div class="form-group mt-3">
                            <label class="form-label">Status</label>
                            <select name="status" class="form-control" required>
                              <option value="active" selected>Active</option>
                              <option value="inactive">Inactive</option>
                            </select>
                          </div>
                          <div class="form-group mt-3">
                            <label class="form-label">Product Image</label>
                            <input
                              class="form-control"
                              type="file"
                              name="image"
                            />
                          </div>
                          <div class="mt-4">
                            <button
                              class="btn btn-primary"
                              type="submit"
                              name="submit"
                            >
                              Add Product
                            </button>
                          </div>
                        </form>
                        <!-- Form -->
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bundle scripts -->
    <script src="admin_src/libs/bundle.js"></script>

    <!-- Apex chart -->
    <script src="admin_src/libs/charts/apex/apexcharts.min.js"></script>

    <!-- Examples -->
    <script src="admin_src/dist/js/examples/customers.js"></script>

    <!-- Main Javascript file -->
    <script src="admin_src/dist/js/app.min.js"></script>
  </body>
</html>

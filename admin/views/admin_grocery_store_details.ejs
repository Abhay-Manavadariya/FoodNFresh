<!DOCTYPE html>
<html lang="en">
  <%- include('common/admin_head'); %>

  <body>
    <%- include('common/sidebar'); %>

    <div class="layout-wrapper">
      <div class="header">
        <div class="menu-toggle-btn">
          <!-- Menu close button for mobile devices -->
          <a href="#">
            <i class="bi bi-list"></i>
          </a>
        </div>
        <!-- Logo -->
        <a href="index.html" class="logo">
          <img
            width="100"
            src="https://vetra.laborasyon.com/assets/images/logo.svg"
            alt="logo"
          />
        </a>
        <!-- ./ Logo -->
        <div class="page-title">Grocery Store Information</div>
      </div>

      <div class="content">
        <div class="row flex-column-reverse flex-md-row">
          <div class="col-md-8">
            <div class="tab-content" id="myTabContent">
              <div
                class="tab-pane fade show active"
                id="profile"
                role="tabpanel"
                aria-labelledby="profile-tab"
              >
                <div class="card mb-4">
                  <div class="card-body">
                    <h6 class="card-title mb-4">Grocery Store Details</h6>

                    <div class="card">
                      <div class="card-body">
                        <form
                          action="/admin/admin_grocery_details"
                          method="post"
                        >
                          <div class="row">
                            <div class="col-md-6">
                              <div class="mb-3">
                                <label class="form-label">Store Name</label>
                                <input
                                  type="text"
                                  class="form-control"
                                  value="<%= admin.store_name %>"
                                  name="store_name"
                                />
                              </div>
                              <div class="mb-3">
                                <label class="form-label">Address</label>
                                <input
                                  type="text"
                                  class="form-control"
                                  value="<%= admin.store_address %>"
                                  name="store_address"
                                />
                              </div>

                              <div class="mb-3">
                                <label class="form-label">Post Code</label>
                                <input
                                  type="text"
                                  class="form-control"
                                  value="<%= admin.store_postcode %>"
                                  name="store_postcode"
                                />
                              </div>
                            </div>
                            <div class="col-md-6">
                              <div class="mb-3">
                                <label class="form-label">City</label>
                                <input
                                  type="text"
                                  class="form-control"
                                  value="<%= admin.store_city %>"
                                  name="store_city"
                                />
                              </div>
                              <div class="mb-3">
                                <label class="form-label">State</label>
                                <input
                                  type="text"
                                  class="form-control"
                                  value="<%= admin.store_state %>"
                                  name="store_state"
                                />
                              </div>
                              <div class="mb-3">
                                <label class="form-label">Country</label>
                                <input
                                  type="text"
                                  class="form-control"
                                  value="India"
                                  readonly
                                />
                              </div>
                            </div>
                            <button class="btn btn-success btn-icon">
                              <i class="bi bi-check-circle"></i> Save
                            </button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="admin_src/libs/bundle.js"></script>

    <!-- Main Javascript file -->
    <script src="admin_src/dist/js/app.min.js"></script>
  </body>
</html>

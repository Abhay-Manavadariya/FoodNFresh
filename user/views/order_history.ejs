<!DOCTYPE html>
<html lang="en">
  <%- include('common/head'); %>

  <body>
    <!-- Header Section start -->
    <%- include('common/header'); %>
    <!-- Header  Section start -->

    <!-- breedcrumb section start  -->
    <div class="section breedcrumb">
      <div class="breedcrumb__img-wrapper">
        <img src="src/images/banner/breedcrumb.jpg" alt="breedcrumb" />
        <div class="container">
          <ul class="breedcrumb__content">
            <li>
              <a href="/">
                <svg
                  width="18"
                  height="19"
                  viewBox="0 0 18 19"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M1 8L9 1L17 8V18H12V14C12 13.2044 11.6839 12.4413 11.1213 11.8787C10.5587 11.3161 9.79565 11 9 11C8.20435 11 7.44129 11.3161 6.87868 11.8787C6.31607 12.4413 6 13.2044 6 14V18H1V8Z"
                    stroke="#808080"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
                <span> > </span>
              </a>
            </li>
            <li>
              <a href="#">
                Account
                <span> > </span>
              </a>
            </li>
            <li class="active">
              <a href="/order_history">Order History</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <!-- breedcrumb section end   -->

    <!-- dashboard Secton Start  -->
    <div class="dashboard section">
      <div class="container">
        <div class="row dashboard__content">
          <div class="col-lg-3"><%- include('common/user_nav'); %></div>
          <div class="col-lg-9 section--xl pt-0">
            <div class="container">
              <!-- Order History  -->
              <div class="dashboard__order-history">
                <div class="dashboard__order-history-title">
                  <h2 class="font-body--xxl-500">Order History</h2>
                </div>

                <% if(success) { %>

                <div
                  class="alert alert-success"
                  role="alert"
                  id="success-alert"
                >
                  <span style="color: #e35651; font-weight: bold"
                    >Order Request Sent Successfully.</span
                  >
                </div>

                <% } %>

                <div class="dashboard__order-history-table">
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th
                            scope="col"
                            class="dashboard__order-history-table-title"
                          >
                            No.
                          </th>
                          <th
                            scope="col"
                            class="dashboard__order-history-table-title"
                          >
                            Order Id
                          </th>
                          <th
                            scope="col"
                            class="dashboard__order-history-table-title"
                          >
                            Date
                          </th>
                          <th
                            scope="col"
                            class="dashboard__order-history-table-title"
                          >
                            Time
                          </th>
                          <th
                            scope="col"
                            class="dashboard__order-history-table-title"
                          >
                            Total
                          </th>
                          <th
                            scope="col"
                            class="dashboard__order-history-table-title"
                          >
                            Status
                          </th>
                          <th
                            scope="col"
                            class="dashboard__order-history-table-title"
                          ></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% let i=1 %> <% orderlist.forEach(function (orderlist)
                        { %>

                        <tr>
                          <td><%= i %></td>
                          <td
                            class="dashboard__order-history-table-item order-id"
                          >
                            <%= orderlist._id %>
                          </td>

                          <td
                            class="dashboard__order-history-table-item order-date"
                          >
                            <%= moment(orderlist.ordertime).format('Do MMMM,
                            YYYY') %>
                          </td>

                          <td
                            class="dashboard__order-history-table-item order-date"
                          >
                            <%= moment(orderlist.ordertime).format('HH:mm:ss')
                            %>
                          </td>

                          <td
                            class="dashboard__order-history-table-item order-total"
                          >
                            <p class="order-total-price">
                              RS. <%= orderlist.totalprice %>
                              <span class="quantity">
                                (<%= orderlist.qty %> Products)</span
                              >
                            </p>
                          </td>

                          <td
                            class="dashboard__order-history-table-item order-status"
                          >
                            <% if(orderlist.status == 'Order_Pending'){ %>

                            <span style="color: #bc1d1d; font-weight: bold"
                              >Order Pending</span
                            >

                            <% } else if(orderlist.status == 'Order_Packing'){
                            %>

                            <span style="color: #0999a3; font-weight: bold"
                              >Order Packing</span
                            >

                            <% }else if(orderlist.status == 'Order_Shipping'){
                            %>

                            <span style="color: #67cb0f; font-weight: bold"
                              >Order Shipped</span
                            >

                            <% }else if(orderlist.status == 'Order_Delivered'){
                            %>

                            <span style="color: #6e2991; font-weight: bold"
                              >Order Delivered</span
                            >

                            <% }else if(orderlist.status == 'Order_Rejected'){
                            %>

                            <span style="color: #af5061; font-weight: bold"
                              >Order Rejected</span
                            >

                            <% } %>
                          </td>
                          <!-- Details page  -->
                          <td
                            class="dashboard__order-history-table-item order-details"
                          >
                            <a
                              href="/order_details?order_id=<%= orderlist._id %>"
                            >
                              View Details</a
                            >
                          </td>
                        </tr>

                        <% i++;}) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- dashboard Secton  End  -->

    <script type="module" src="src/js/addtocart.js"></script>

    <script src="src/lib/js/jquery.min.js"></script>
    <script src="src/lib/js/swiper-bundle.min.js"></script>
    <script src="src/lib/js/bvselect.js"></script>
    <script src="src/lib/js/bootstrap.bundle.min.js"></script>
    <script src="src/js/main.js"></script>
  </body>
</html>

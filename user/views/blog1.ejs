    <section class="single-blog section">
      <div class="container">
        <div class="row single-blog__content">
          <div class="col-lg-12">
            <div class="single-blog__product-content">
              <div class="single-blog__img-wrapper one">
                <img src="src/images/blogs/blog1.jpg" alt="products" />

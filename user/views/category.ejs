<!DOCTYPE html>
<html lang="en">
  <%- include('common/head'); %>

  <body>
    <!-- Header Section start -->
    <%- include('common/header'); %>
    <!-- Header  Section start -->

    <!-- Breadcrumb Section Start  -->
    <div
      class="breedcrumb breedcrumb--two mb-5"
      style="background-color: #343a40"
    >
      <div class="container">
        <ul class="breedcrumb__content">
          <li>
            <a href="/">
              <svg
                width="18"
                height="19"
                viewBox="0 0 18 19"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M1 8L9 1L17 8V18H12V14C12 13.2044 11.6839 12.4413 11.1213 11.8787C10.5587 11.3161 9.79565 11 9 11C8.20435 11 7.44129 11.3161 6.87868 11.8787C6.31607 12.4413 6 13.2044 6 14V18H1V8Z"
                  stroke="#808080"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
              </svg>
              <span> > </span>
            </a>
          </li>
          <li class="active">
            <a href="/category"> Categories </a>
          </li>
        </ul>
      </div>
    </div>
    <!-- Breadcrumb Section End  -->

    <!-- Shop list Section Start  -->
    <h3 style="text-align: center; color: #00b207" class="mb-5">
      All Category
    </h3>

    <section class="shop shop--two">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <!-- Desktop Version  -->
            <div class="row shop__product-items">
              <% data.forEach(function (data) { %>

              <div class="col-lg-3 col-md-6">
                <div class="cards-md cards-md--four w-100">
                  <div class="cards-md__img-wrapper">
                    <a href="/product?category_name=<%= data.name%>">
                      <img
                        src="data:<%= data.category_photo.contentType %>;base64,<%= data.category_photo.data.toString('base64') %>"
                        alt=""
                      />
                    </a>
                  </div>
                  <div
                    class="cards-md__info d-flex justify-content-between align-items-center"
                  >
                    <a
                      href="/product?category_name=<%= data.name%>"
                      class="cards-md__info-left"
                    >
                      <h6 class="font-body--md-400"><%= data.name %>></h6>
                    </a>
                  </div>
                </div>
              </div>

              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Shop list Section End   -->

    <!--Footer Section Start  -->
    <%- include('common/footer'); %>
    <!--Footer Section end  -->

    <script src="src/lib/js/jquery.min.js"></script>
    <script src="src/lib/js/swiper-bundle.min.js"></script>
    <script src="src/lib/js/bvselect.js"></script>
    <script src="src/lib/js/bootstrap.bundle.min.js"></script>
    <script src="src/lib/js/jquery.syotimer.min.js"></script>
    <script src="src/js/main.js"></script>
  </body>
</html>

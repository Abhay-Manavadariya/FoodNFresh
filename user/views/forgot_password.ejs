<!DOCTYPE html>
<html lang="en">
  
<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<%- include('common/head'); %>

  <body>
    <!-- Sign-in Section Start  -->
    <section class="sign-in section section--xl">
      <div class="container">
        <div class="form-wrapper">
          <h6 class="font-title--sm">Forgot Password</h6>

          <% if(typeof alert != 'undefined') { %>
            <% alert.forEach(function(error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error.msg %>
                  </div>
            <% }) %>
        <% } %>

        <% if(changepw != '') { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= changepw %>
                  </div>
        <% } %>

        <% if(successful != '') { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= successful %>
              </div>
    <% } %>
          
          <form action="/forgot_password" method="POST">
            
            <div class="form-input">
              <input type="email" placeholder="Email" name="email" required>
            
            </div>

            <div class="form-input">
              <input type="password" placeholder="Password" id="password" name="password" required>
              <button
                type="button"
                class="icon icon-eye"
                onclick="showPassword('password',this)"
              >
            </div>

            <div class="form-input">
                <input type="password" placeholder="Confirm Password" id="cpassword" name="cpassword" required>
                <button
                  type="button"
                  class="icon icon-eye"
                  onclick="showPassword('password',this)"
                >
              </div>

            <div class="form-button">
              <button class="button button--md w-100">Submit</button>
            </div>

            <div class="form-register">
                <a href="/login" style="color: rgb(255, 42, 0);font-size: large;"><b>Login</b></a>
            </div>
              
           
          </form>
        </div>
      </div>
    </section>
    <!-- Sign-in Section end  -->


    <!--Footer Section end  -->
    <script src="src/lib/js/jquery.min.js"></script>
    <script src="src/lib/js/swiper-bundle.min.js"></script>
    <script src="src/lib/js/bvselect.js"></script>
    <script src="src/lib/js/bootstrap.bundle.min.js"></script>
    <script src="src/js/main.js"></script>
  </body>

</html>
